# Database Configuration (Production)
DB_HOST=your-neon-or-supabase-host.neon.tech
DB_PORT=5432
DB_NAME=steam_manifests
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Server Configuration
PORT=3001
NODE_ENV=production

# Authentication (IMPORTANT: Generate secure secrets!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-64-chars

# Admin Registration Secret (Share only with trusted admins)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_SECRET=your-admin-registration-secret

# CORS Configuration
CLIENT_URL=https://your-frontend-url.vercel.app

